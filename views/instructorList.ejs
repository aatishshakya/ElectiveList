<% include partials/header.ejs %>
  <div class="container">
    <div class="table-wrapper">
      <% if (instructors.length > 0) {%>
        <h2> Instructor List</h2>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Elective 2 (Section)</th>
                    <th scope="col">ELective 3 (Section)</th>
                </tr>
            </thead>
            <tbody>
                <% instructors.forEach((instructor, index) => { %>
                    <tr>
                        <td> <%= instructor.first_name %> </td>
                        <td> <%= instructor.last_name %> </td>
                        <td> <%= instructor.elec2_name %> (<%= instructor.elec2_sec %>)</td>
                        <td> <%= instructor.elec3_name %> (<%= instructor.elec3_sec %>)</td>
                        <td><a href="/instructor/edit/<%= instructor.ins_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a></td>
                        <td><a href="/instructor/delete/<%= instructor.ins_id %>"class="btn btn-sm btn-danger">Delete</a></td>
                    <tr>
                <% }) %>

            </tbody>
        </table>


      <% } else { %>
          <p class="text-center">No instructor found.</p>
      <% } %>

  </div>


    </div>
</div>
</body>

</html>
