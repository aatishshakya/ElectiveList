<% include partials/header.ejs %>
  <div class="container">
    <div class="table-wrapper">
      <% if (students.length > 0) {%>

        <h2> Students of Batch: <%= year %> <%= sec %> </h2>

        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Year/Section/Rollno</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                </tr>
            </thead>
            <tbody>

                <% students.forEach((student, index) => { %>
                    <tr>
                        <td> <%= student.year %>/<%= student.sec %>/<%= student.stu_id %> </td>
                        <td> <%= student.first_name %> </td>
                        <td> <%= student.last_name %> </td>
                        <td><a href="/student/edit/<%= student.year %>/<%= student.sec %>/<%= student.stu_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a></td>
                        <td><a href="/student/assigncourse/<%= student.year %>/<%= student.sec %>/<%= student.stu_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Assign Course</a></td>
                        <td><a href="/student/delete/<%= student.year %>/<%= student.sec %>/<%= student.stu_id %>"class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                <% }) %>

            </tbody>
        </table>


      <% } else { %>
          <p class="text-center">No Students found. </p>
      <% } %>

    </div>


    </div>
</div>
</body>

</html>
