<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>

        <h2 style="padding-top: 1.5em;"> Edit Student </h2>

        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">

              <div class="form-group col-md-4">
                <input type="text" class="form-control" name="f_name" id="first-name" placeholder="First Name" required value=<%= student.first_name %> >
              </div>

              <div class="form-group col-md-4">
                <input type="text" class="form-control" name="l_name" id="last-name" placeholder="Last Name" required value=<%= student.last_name %> >
              </div>

              <div class="form-group col-md-4">
                <button type="submit" class="btn btn-primary float-right">Edit Student</button>
              </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>
